@model TimeKeepingApp.Models.Shift

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Shift</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShiftStart)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShiftStart)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShiftEnd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShiftEnd)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
@if (User.IsInRole("Manager") || User.IsInRole("Admin"))
{
<div>
    @using (Html.BeginForm("Approve", "Shifts", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)
        <input type="submit" value="Approve" class="btn btn-success" />

    }
</div>
<div>
    @using (Html.BeginForm("Deny", "Shifts", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)
        <input type="submit" value="Deny" class="btn btn-danger" />

    }
</div>
}

<div>
    <br />
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Your shifts</a> |
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <a asp-action="ManagerShifts">Back to All Shifts</a>

    }
</div>