@model List<ShiftEmployeeJoin>

@{
    ViewData["Title"] = "Index";
}

<h1>List of All Employee Shifts</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].first)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].last)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].end)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].loc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].stat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.first)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.last)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.end)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.loc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stat)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
